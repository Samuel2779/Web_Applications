extends ../layout 

block content
    a(href='/') Home
    br
    a(href='/bicicletas') Listado
    br
    h1 Reservar bicicleta 
    
    form(action=`/bicicletas/${bici.code}/reservar` method='POST')
        table.table 
            tr 
                td
                    label(for='code') Code:
                td
                    input#id(type='text' name='code' value=bici.code readonly)
            tr 
                td
                    label(for='nombre') Nombre de Usuario:
                td
                    input#nombre(type='text' name='nombre')
            tr 
                td
                    label(for='desde') Desde:
                td
                    input#desde(type='date' name='desde' )
            tr 
                td
                    label(for='hasta') Hasta:
                td
                    input#hasta(type='date' name='hasta' )
            tr
                td 
                td
                    input.btn(type='submit' value='Reservar')